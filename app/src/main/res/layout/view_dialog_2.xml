<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_16dp"
        android:minWidth="304dp">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:textAppearance="@style/TextAppearance.Teamgoo.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="모집완료로 변경해\n지원자를 그만 받을까요?" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_first"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ripple_8dp"
            android:fontFamily="@font/pretendard_bold"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="10dp"
            android:textColor="@color/gray_5"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_second"
            app:layout_constraintEnd_toStartOf="@id/btn_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_second"
            tools:text="취소하기" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_second"
            style="@style/Widget.Teamgoo.Button.Purple"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_message"
            tools:text="모집완료" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>