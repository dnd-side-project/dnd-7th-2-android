<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="progressTeampleAdapter"
            type="com.dnd.niceteam.ui.home.adapter.ProgressTeampleAdapter" />

        <variable
            name="progressTeampleItemDecoration"
            type="com.dnd.niceteam.ui.home.ProgressTeampleItemDecoration" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/layout_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#282856"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.Teamgoo.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar_56dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/layout_home_top_banner"
                    layout="@layout/layout_home_top_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/layout_home_content"
                    layout="@layout/layout_home_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:progressTeamplAdapter="@{progressTeampleAdapter}"
                    app:progressTeamplItemDecoration="@{progressTeampleItemDecoration}" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>