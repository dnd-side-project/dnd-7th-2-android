<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_recommend_teample"
        android:paddingHorizontal="@dimen/horizontal_padding_home_item_16dp"
        android:paddingVertical="@dimen/vertical_padding_home_item_20dp">

        <TextView
            android:id="@+id/tv_teample_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="교내 캡스톤 디자인 경진대회"
            android:textAppearance="@style/TextAppearance.Teamgoo.Item.Title"
            app:layout_constraintEnd_toStartOf="@id/iv_bookmark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="참가하는 프로젝트 명" />

        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bookmark_off"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_teample_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_teample_name">

            <com.google.android.material.chip.Chip
                style="@style/Widget.Teamgoo.Chip.ItemProgressTeample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#IT/소프트웨어/게임"
                tools:text="#IT/소프트웨어/게임" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Teamgoo.Chip.ItemProgressTeample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대외활동"
                tools:text="대외활동" />
        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_group_teample_info">

            <TextView
                android:id="@+id/tv_teample_dday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:background="@drawable/bg_green_6dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:text="D-8"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="D-8" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_team" />

            <TextView
                android:id="@+id/tv_teample_personnel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="2명 모집"
                android:textColor="@color/gray_5"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/view_circle"
                app:layout_constraintStart_toEndOf="@id/view_circle"
                tools:text="2명 모집" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/tv_teample_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="2022/09/06 - 2023/03/13"
                android:textColor="@color/gray_5"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/view_circle"
                app:layout_constraintStart_toEndOf="@id/view_circle"
                tools:text="2022/09/06 - 2023/03/13" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>