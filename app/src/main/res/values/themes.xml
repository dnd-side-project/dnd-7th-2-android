<resources>

    <style name="Base.Theme.Teamgoo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_purple</item>
        <item name="colorOnPrimary">@color/primary_purple</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSecondary">@color/primary_green</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.Teamgoo" parent="Base.Theme.Teamgoo" />

    <style name="Theme.Teamgoo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.MaterialComponents.SmallComponent
        </item>
    </style>

    <style name="Theme.Teamgoo.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="elevation">0dp</item>
    </style>

</resources>