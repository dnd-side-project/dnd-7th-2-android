<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Teamgoo.AppBar.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/primary_purple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Teamgoo.Home.TopBanner" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Teamgoo.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Teamgoo.Item.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/gray_6</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Teamgoo.Button.Green" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_green_10dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">9.5dp</item>
        <item name="android:paddingBottom">9.5dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
    </style>

    <style name="Widget.Teamgoo.Button.Purple" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_purple_15dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Teamgoo.Button.Stroke.Purple" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_white_stroke_purple_radius_15dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:textColor">@color/primary_purple</item>
    </style>

    <style name="Widget.Teamgoo.Chip.ItemProgressTeample" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipMinHeight">24dp</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/gray_2</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/gray_4</item>
    </style>
</resources>